@model Obrasci.ViewModels.UsageViewModel
@using Obrasci.Models

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Your package</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <div class="text-muted small">Current package</div>
                        <div class="h5 mb-0">@Model.Package</div>
                    </div>
                    <span class="badge bg-outline-primary border border-primary text-primary px-3 py-2">
                        @Model.Package
                    </span>
                </div>

                <hr />

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Daily uploads</span>
                        <span class="small fw-semibold">
                            @Model.DailyUploadCount / @Model.DailyUploadLimit
                        </span>
                    </div>
                    @{
                        var percent = Model.DailyUploadLimit == 0
                        ? 0
                        : (int)(100.0 * Model.DailyUploadCount / Model.DailyUploadLimit);
                        if (percent > 100) { percent = 100; }
                    }
                    <div class="progress" style="height: 0.75rem;">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width:@percent%"
                             aria-valuenow="@percent" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col-6">
                        <div class="text-muted small">Total photos</div>
                        <div class="fw-semibold">@Model.TotalPhotos</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Storage used</div>
                        <div class="fw-semibold">
                            @(Model.TotalSizeBytes / (1024 * 1024)) MB
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Change package</h5>
            </div>
            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }

                <form asp-action="ChangePackage" asp-controller="Account" method="post" class="mt-2">
                    <div class="mb-3">
                        <label class="form-label">Select new package</label>
                        <select name="newPackage" class="form-select">
                            @foreach (PackageType pkg in Enum.GetValues(typeof(PackageType)))
                            {
                                <option value="@pkg" selected="@(pkg == Model.Package)">
                                    @pkg
                                </option>
                            }
                        </select>
                        <div class="form-text">
                            Change is allowed once per day and becomes effective tomorrow.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Schedule change
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
