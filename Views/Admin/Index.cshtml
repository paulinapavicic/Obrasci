@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin dashboard</h2>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Total users</div>
                <div class="h3 mb-0">@ViewBag.UserCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Total photos</div>
                <div class="h3 mb-0">@ViewBag.PhotoCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted text-uppercase small mb-1">Logged actions</div>
                <div class="h3 mb-0">@ViewBag.LogCount</div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-wrap gap-2">
    <a asp-action="Users" class="btn btn-primary">
        Manage users
    </a>
    <a asp-action="Photos" class="btn btn-outline-primary">
        Manage photos
    </a>
    <a asp-action="Logs" class="btn btn-outline-secondary">
        View logs
    </a>
</div>
