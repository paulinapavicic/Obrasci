@{
    ViewData["Title"] = "Upload Photo";
}

<h2>Upload Photo</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Photo file</label>
        <input type="file" name="photoFile" class="form-control" />
        
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" name="description" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Hashtags</label>
        <input type="text" name="hashtags" class="form-control" placeholder="#cat #sunset" />
    </div>

    <div class="mb-3">
        <label class="form-label">Processing</label>
        <select name="processingOption" class="form-select">
            <option value="Original">Original</option>
            <option value="Resize800">Resize to 800px</option>
            <option value="Grayscale">Grayscale</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
